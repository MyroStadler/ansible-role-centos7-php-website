<VirtualHost *:80>
    ServerName {{ inventory_hostname }}
    Redirect / https://{{ inventory_hostname }}/
</VirtualHost>

<VirtualHost _default_:443>
    ServerAdmin webmaster@{{ inventory_hostname }}
    DocumentRoot {{ website_install_dir }}{{ '/' if website_install_public_folder else '' }}{{ website_install_public_folder }}
    ServerName {{ inventory_hostname }}
    DirectoryIndex index.php
    <Directory {{ website_install_dir }}{{ '/' if website_install_public_folder else '' }}{{ website_install_public_folder }}>
        AllowOverride All
        Order Allow,Deny
        Allow from All
    </Directory>
    SSLEngine On
    SSLCertificateFile {{ website_install_ssl_cert_file }}
    SSLCertificateKeyFile {{ website_install_ssl_cert_key_file }}
</VirtualHost>
